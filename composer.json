{
    "name": "kolosh/due-date-calculator",
    "description": "Due Date Calculator",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Kolos Horvath",
            "email": "matekolos@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "config": {
        "bin-dir": "bin",
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "require": {
        "php": ">=7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Kolosh\\DueDateCalculator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kolosh\\DueDateCalculator\\Tests\\": "tests/src/"
        }
    }
}
